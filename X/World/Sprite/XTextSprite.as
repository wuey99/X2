package X.World.Sprite {
	
	include "..\\..\\flash.h";
	include "..\\..\\text.h";

//------------------------------------------------------------------------------------------
	public class XTextSprite extends XSprite {
		private var m_text:TextField;
		
//------------------------------------------------------------------------------------------
		public function XTextSprite () {
			m_text = new TextField ();
			
			addChild (m_text);
		}

//------------------------------------------------------------------------------------------
		public function setup ():void {
		}

//------------------------------------------------------------------------------------------
		public function cleanup ():void {
		}
		
//------------------------------------------------------------------------------------------
		public function get v ():TextField {
			return m_text;
		}
		
//------------------------------------------------------------------------------------------
		public function set text (__text:String):void {
			m_text.text = __text;
		}

//------------------------------------------------------------------------------------------
		public function set textColor (__color:uint):void {
			m_text.textColor = __color;
		}
				
//------------------------------------------------------------------------------------------
	}
	
//------------------------------------------------------------------------------------------
}